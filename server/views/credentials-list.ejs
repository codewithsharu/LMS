<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Credentials</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            max-width: 800px;
            margin: 20px auto;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .copy-btn {
            cursor: pointer;
            padding: 2px 5px;
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <h2 style="text-align: center">Test Credentials</h2>
    <table>
        <tr>
            <th>Employee ID</th>
            <th>Password</th>
            <th>Role</th>
            <th>Name</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.empId %> <button class="copy-btn" onclick="copyText('<%= user.empId %>')">Copy</button></td>
                <td><%= user.password %> <button class="copy-btn" onclick="copyText('<%= user.password %>')">Copy</button></td>
                <td><%= user.role %></td>
                <td><%= user.name %></td>
            </tr>
        <% }); %>
    </table>

    <script>
        function copyText(text) {
            navigator.clipboard.writeText(text)
                .then(() => alert('Copied: ' + text))
                .catch(err => console.error('Failed to copy:', err));
        }
    </script>
</body>
</html> 